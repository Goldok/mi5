{% extends 'base.html.twig' %}

{% block title %}BackOffice-Categorie-show{% endblock %}

{% block body %}
    <h1>{{ categorie.libelle }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ categorie.libelle }}</td>
            </tr>
            <tr>
                <th>Visuel</th>
                <td>
                    <div class="card" style="width: 10rem;">
                    <img class="card-img-top" src="{{ asset(categorie.visuel) }}" alt="{{categorie.libelle}}">
                    </div>
                </td>            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ categorie.texte }}</td>
            </tr>
        </tbody>
    </table>


    <form class="form-inline my-2 my-lg-0" action="{{ path('categorie_edit', {'id': categorie.id}) }}" method="GET">
        <button class="btn btn-primary" type="submit">
            Editer
        </button>
    </form>

    {{ include('categorie/_delete_form.html.twig') }}

    <a href="{{ path('categorie_index') }}">retour</a>

{% endblock %}
